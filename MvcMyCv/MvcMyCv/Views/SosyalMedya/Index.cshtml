@using MvcMyCv.Models.Entity

@model List<tbl_sosyal_medya>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Sosyal Medya Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Durum</th>
        <th>Link</th>
        <th>İkon</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        @{string durum = ""; }
        <td>@item.sosyal_medya_id_PK</td>
        @if (@item.durum==true)
        {
            durum = "Aktif";
            
        }
        else
        {
            durum = "Pasif";

        }
        <td>@item.ad</td>
        <td>@durum</td>
        <td>@item.link</td>
        <td>@item.ikon</td>
        <td>
            <a href="/SosyalMedya/SosyalMedyaDuzenle/@item.sosyal_medya_id_PK" class="btn btn-info btn-sm">
                <i class="fas fa-pencil-alt"></i>
                Düzenle
            </a>
        </td>
        <td>
            <a href="/SosyalMedya/SosyalMedyaSil/@item.sosyal_medya_id_PK" class="btn btn-danger btn-sm">
                <i class="fas fa-trash">
                </i>
                Sil
            </a>
        </td>
    </tr>
    }
</table>
<button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Sosyal Medya Ekleme Penceresi</h2>
            </div>
            <form method="post" action="/SosyalMedya/SosyalMedyaEkle/">
                <div class="modal-body">
                    <label>Sosyal Medya İsmi</label>
                    <input type="text" name="ad" class="form-control" />
                    <br />
                    <label>Link</label>
                    <input type="text" name="link" class="form-control" />
                    <br />
                    <label>İkon</label>
                    <input type="text" name="ikon" class="form-control" />
                    <br />
                    <button class="btn btn-info"> Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
