@using MvcMyCv.Models.Entity

@model List<tbl_sertifika>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                           
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        if (item.sertifika_id_PK % 2 == 0)
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGuncelle/@item.sertifika_id_PK" class="btn btn-info">
                                                    <span class="">
                                                        @item.tarih
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGuncelle/@item.sertifika_id_PK" class="btn btn-success">
                                                    <span class="">
                                                        @item.tarih
                                                    </span>
                                                </a>
                                            </div>
                                        }

                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            @*<i class="fas fa-comment bg-primary"></i>*@
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.aciklama
                                                </div>
                                                @*<div class="timeline-footer">
                            <a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                            <a href="#" class="btn btn-danger btn-sm">Sil</a>
                        </div>*@
                                            </div>
                                        </div>
                                    }
                                </div>
                                <a href="/Sertifika/SertifikaEkle/" class="btn btn-info">Sertifika Ekle</a>
                            </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
    </section>
</body>
</html>