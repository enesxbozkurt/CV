@using MvcMyCv.Models.Entity
@model List<tbl_yetenek>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string  renk="";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenek/YeniYetenek/" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.oran >= 0 && item.oran <= 50)
                                            {
                                                renk = "progress-bar bg-danger";
                                            }
                                            if (item.oran >= 51 && item.oran <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                            }
                                            if (item.oran >= 71 && item.oran <= 84)
                                            {
                                                renk = "progress-bar bg-primary";
                                            }
                                            if (item.oran >= 85 && item.oran <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                            }
                                            <tr>
                                                <td>@item.yetenek_id_PK</td>
                                                <td>@item.yetenek_adi</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @item.oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@renk">@item.oran%</span></td>
                                                <td>
                                                    <a href="/Yetenek/YetenekDuzenle/@item.yetenek_id_PK" class="btn btn-info btn-sm">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/Yetenek/YetenekSil/@item.yetenek_id_PK" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>